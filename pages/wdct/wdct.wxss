/* pages/wdct/wdct.wxss */

.wdct-page {
  height: 100%; 
}

.wdct-test {
  width: 100%;
  height: calc(100% - 90rpx);
  box-sizing: border-box;
  background-color: var(--background-color);
  padding: 0rpx 0 300rpx;
  overflow-y: auto;
  position: relative;
}

.test-content {
  position: relative;
  text-indent: 100rpx;
  padding: 20rpx 10rpx 40rpx;
  background-color: white;
}

.test-content .test-tg {
  font-size: 34rpx;
  line-height: 60rpx;
  position: relative;
}

.test-type {
  position: absolute;
  left: 0;
  top: 26rpx;
  text-indent: 0rpx;
  background-color: var(--theme-color);
  color: white;
  width: 60rpx;
  text-align: center;
  font-size: 24rpx;
  padding: 4rpx 8rpx;
}
.btn-box {
  padding: 0 40rpx; 
  height: 220rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 86rpx;
  left: 0;
  width: 100%;
  background-color: white;
  z-index: 99;
}

.test-btn button {
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  background-color: var(--theme-color);
  border-color: var(--theme-color);
}
.last-next{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.last-btn,.next-btn{
  flex-grow: 1;
}
.next-btn{
  margin-left: 20rpx;
}

.last-btn button{
  width: 100%;
  border-radius: 10rpx;
  background-color: var(--theme-color);
  border-color: var(--theme-color);
}
.next-btn button{
  width: 100%;
  border-radius: 10rpx;
  background-color: var(--theme-color);
  border-color: var(--theme-color);
}


.test-option {
  min-height: 60rpx;
  display: flex;
  align-items: center;
  background-color: white;
  padding: 20rpx;
}

.test-option:nth-of-type(even) {
  background-color: var(--background-color);
}

.multiple-option {
  color: #1989fa;
}

.option-code {
  width: 80rpx;
  text-align: center;
  line-height: 40rpx;
}

.option-code text {
  display: inline-block;
}

.option-code image {
  width: 46rpx;
  height: 46rpx;
}

.option-content {
  flex-grow: 1;
  width: 80%;
  line-height: 40rpx;
}

.footer-box {
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  bottom: 0;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: white;
}

.test-complete-msg {
  display: flex;
  align-items: center;
  color: #868686;
}

.test-complete-msg image {
  width: 46rpx;
  height: 46rpx;
  margin-right: 10rpx;
}

.test-submit {
  /* color: var(--success-color); */
}

.subject-box {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  padding-top: 100rpx;
}

.subject-box text {
  display: block;
  width: 80rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}

.test-end {
  width: 100%;
  height: 100%;
}

.test-head {
  height: 400rpx;
  position: relative;
}

.test-head .bg-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.test-score {
  display: flex;
  width: 100%;
  color: white;
  padding-top: 40rpx;
}

.score-box {
  flex-grow: 1;
  text-align: center;
  z-index: 99;
}

.dt-score {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
}

.dt-score image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 6rpx;
}

.score-num text {
  font-size: 60rpx;
  margin-right: 10rpx;
}

.dt-time {
  line-height: 90rpx;
}

.go-dtzx {
  text-align: center;
}

.go-dtzx button {
  border-radius: 10rpx;
  height: 70rpx;
  background-color: #52ccb8;
  color: white;
  margin-top: 60rpx;
}

.test-cz .van-cell .van-cell__left-icon-wrap .van-icon {
  font-size: 50rpx;
}

.van-cell-text {
  font-size: 36rpx;
}

.van-cell-num {
  font-size: 30rpx;
  color: rgb(170, 169, 169);
}